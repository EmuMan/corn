<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CornApp.MainPage"
             xmlns:ns ="clr-namespace:CornApp;assembly=CornApp"
             x:DataType="ns:MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,50,30,50"
            VerticalOptions="Center">

            <Image
                Source="{Binding CornImage}"
                SemanticProperties.Description="Corn!"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="Shuck Status Tool"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                Text="Enter a Discord username:"
                SemanticProperties.HeadingLevel="Level2"
                FontSize="16"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"/>

            <Entry Text="{Binding User}" Placeholder="Discord Username"/>

            <Button
                Text="Confirm"
                Clicked="OnConfirmClicked"
                HorizontalOptions="Center" />

            <Label Margin="0,20,0,0" FontSize="20" Text="{Binding StatusText}" HorizontalOptions="Center"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
